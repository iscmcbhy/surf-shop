        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

        <script src="/wrapkit/js/custom.min.js"></script>
        <script type="text/javascript">
            $('a').on('click', function (event) {
                var $anchor = $(this);
                $('html, body').stop().animate({
                scrollTop: $($anchor.attr('href')).offset().top - 90
                }, 1000);
                event.preventDefault();
            });
                
            $(".custom-file-input").on("change", function() {
                var fileName = $(this).val().split("\\").pop();
                var numFiles = $(".custom-file-input")[0].files.length;
                if(numFiles > 1) {
                    fileName += ` and ${numFiles - 1} more ${numFiles - 1 === 1 ? "image" : "images"}`;
                }
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            });
                
            $(".mimicLabel").on("click", function() {
                $(this).siblings(".custom-file").children("input").focus();
            })
        </script>
    </body>
