<% layout("layouts/boilerplateWithoutBanner.ejs"); -%>

<h2 class="text-center title mt-5">
    Forgot Password
</h2>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form class="row" action="/forgot-password?_method=PUT" method="POST">
                <div class="form-group col-12">
                    <label for="email">Email</label>
                    <input type="text" class="form-control" id="email" name="email" placeholder="your-email@website.com" autofocus>
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-info waves-effect waves-light m-r-10">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>